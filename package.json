{
  "name": "access-registry-contract",
  "version": "1.0.0",
  "description": "Oracle Smart contract to provide allow/block list",
  "main": "index.js",
  "scripts": {
    "generate-abi": "cat artifacts/contracts/PaxosSanctionedListV1.sol | jq -c .abi > contract.abi",
    "generate-bin": "cat artifacts/contracts/PaxosSanctionedListV1.sol | jq  -r .bytecode > contract.bin",
    "compile": "npx hardhat compile --force",
    "coverage": "npx hardhat coverage",
    "flatten-impl": "npx hardhat flatten contracts/PaxosSanctionedListV1.sol > ./flattened/PaxosSanctionedListV1.sol",
    "solhint": "solhint 'contracts/**/*.sol'",
    "test": "npx hardhat test"
  },
  "author": "PAXOS",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/hardhat-upgrades": "^2.3.3",
    "@typechain/ethers-v6": "^0.4.3",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "bignumber.js": "^9.1.2",
    "web3": "^4.3.0"
  }
}
